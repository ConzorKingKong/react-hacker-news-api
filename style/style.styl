.title-bar
  display flex
  position relative
  justify-content space-around
  padding-top 2.5vh
  padding-bottom 2.5vh
  z-index 100

  a
    text-decoration none
    color grey

.links
  width 100%

.link
  display flex
  justify-content space-between
  border 2px solid black
  text-align center
  animation materialize 2s

.content
  display flex
  width 100%
  justify-content center

.test
  display flex

.item-title
  text-decoration none
  color grey
  font-size 1.3em

.user-header
  display flex
  justify-content center
  flex-direction column

.comment

  .comment
    animation slide 1s
    animation-fill-mode forwards

.cover
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-color white
  display flex !important
  align-items center
  justify-content center

.circle
  display flex !important
  border-top .1em solid grey
  border-radius 50%
  z-index 100
  height 6em
  width 6em
  animation spin 2s linear infinite

@keyframes spin 
  0% 
    transform rotate(0deg)
  100% 
    transform rotate(360deg)


@keyframes materialize 
  0%
    opacity .1
  
  100%
    opacity 1

@keyframes slide
  0%
    opacity .1
  
  100%
    opacity 1
    margin-left 7%
