.container
  background-color #f6f6ef

a
  text-decoration none

.title-bar
  display flex
  position relative
  justify-content space-around
  padding-top 2.5vh
  padding-bottom 2.5vh
  z-index 100
  background-color #ff6600

  a
    color black

.posts-list
  width 100%
  display flex
  flex-direction column

.posts-list-item
  display flex
  align-items center
  margin-top 0.5em
  margin-bottom 0.5em
  animation materialize 2s

  a
    color grey

.posts-list-item-score
  margin-left 0.5em
  margin-right 0.5em

.posts-list-item-title
  display flex

.posts-list-item-by
  font-size 0.75em
  margin-left 0.5em
  margin-right 0.5em

.posts-list-item-user
  font-size 1em
  margin-right 0.4em

.content
  display flex
  justify-content center

.user-placeholder
  display flex
  flex-direction column
  width 50%
  align-items center
  margin-top 2em

.user-placeholder-inner-wrapper
  display flex
  flex-direction column
  width 100%
  height 50%
  margin-top 2em

.user-placeholder-name
  width 30%
  height 1.8em
  background-color grey
  margin-bottom 1.5em

.user-placeholder-karma
  width 10%
  height 0.8em
  background-color grey
  margin-bottom 1.5em
  
.user-placeholder-story
  width 10%
  height 0.8em
  background-color grey
  margin-bottom 0.5em
  
.user-placeholder-comment
  width 30%
  height 1.8em
  background-color grey
  margin-bottom 0.5em
  
.user
  display flex

.item-placeholder
  display flex
  flex-direction column
  align-items center
  width 100%
  height 50%
  margin-top 2em

.item-placeholder-header
  width 30%
  height 1.8em
  background-color grey

.item-placeholder-subheader
  width 20%
  height 1em
  background-color grey
  margin-top 0.4em
  margin-bottom 0.4em

.item-placeholder-content
  width 75%
  height 5em
  background-color grey
  margin-top 0.4em
  margin-bottom 0.4em

.item
  display flex
  flex-direction column
  align-items center
  margin-top 2em

.item-title
  text-decoration none
  color grey
  font-size 1.3em

.item-subtitle
  display flex
  margin-top 0.4em

.item-subtitle-user-info
  margin-right 0.3em

.user-header
  display flex
  justify-content center
  flex-direction column

  h3
    margin-top 0

.comment
  margin-bottom 1em
  margin-top 1em

  .comment
    animation slide 1s
    animation-fill-mode forwards

.comment-sub-header
  display flex

.comment-sub-header-user
  margin-right 0.3em

.show-hide
  margin-left 0.2em

.show-hide:hover
  cursor pointer

.cover
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-color white
  display flex
  align-items center
  justify-content center

.circle
  display flex
  border-top .1em solid grey
  border-radius 50%
  z-index 100
  height 6em
  width 6em
  animation spin 2s linear infinite

.story-placeholder
  display flex
  flex-direction column

.story-placeholder.story-placeholder
  margin-bottom 1em

.story-placeholder-bar
  background-color #efefef
  height .7em
  display flex
  margin-bottom .2em

@keyframes spin 
  0% 
    transform rotate(0deg)
  100% 
    transform rotate(360deg)


@keyframes materialize 
  0%
    opacity .1
  
  100%
    opacity 1

@keyframes slide
  0%
    opacity .1
  
  100%
    opacity 1
    margin-left 7%
