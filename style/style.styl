.title-bar
  display flex
  position relative
  justify-content space-around
  margin-top 2.5vh
  margin-bottom 2.5vh
  z-index 100

  a
    text-decoration none
    color grey

.posts-list
  width 100%

.posts-list-item
  display flex
  flex-direction column
  animation materialize 2s

  a
    text-decoration none
    color grey

.posts-list-item.posts-list-item
  margin-top 1em

.posts-list-item-subtitle
  font-size .8em

.content
  display flex

.user
  display flex

.item
  display flex
  flex-direction column
  align-items center

.item-title
  text-decoration none
  color grey
  font-size 1.3em

.user-header
  display flex
  justify-content center
  flex-direction column

.comment

  .comment
    animation slide 1s
    animation-fill-mode forwards

.cover
  position absolute
  top 0
  left 0
  bottom 0
  right 0
  background-color white
  display flex
  align-items center
  justify-content center

.circle
  display flex
  border-top .1em solid grey
  border-radius 50%
  z-index 100
  height 6em
  width 6em
  animation spin 2s linear infinite

@keyframes spin 
  0% 
    transform rotate(0deg)
  100% 
    transform rotate(360deg)


@keyframes materialize 
  0%
    opacity .1
  
  100%
    opacity 1

@keyframes slide
  0%
    opacity .1
  
  100%
    opacity 1
    margin-left 7%
